@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.Admin.Roatp.Web.Infrastructure
@model SFA.DAS.Admin.Roatp.Web.Models.ProviderNotFoundInUkrlpViewModel
@{
    ViewData["Title"] = "UKPRN not found";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">UKPRN not found </h1>
            <p class="govuk-body">This is because the UKPRN either:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>does not exist</li>
                <li>is inactive on the UK Register of Learning Providers</li>
            </ul>
        <p class="govuk-body"><a href="@Model.AddANewTrainingProviderUrl" class="govuk-link">Try again</a></p>
    </div>
</div>